{
   "manifest_version": 2,
   "name": "MatAway",
   "version": "1.0",
 
   "description": "Adds a red border to all webpages matching mozilla.org.",
 
   "icons": {
     "48": "icons/border-48.png"
   },
 
   "content_scripts": [
     {
       "matches": ["*://*.mozilla.org/*"],
       "js": ["source/mataway.js"]
     }
   ]
 }
 